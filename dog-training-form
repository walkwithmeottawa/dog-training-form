<body>
    <!-- Trigger Button (you can style or hide this as needed) -->
    <button class="modal-trigger" id="openModal">Book a Training Session</button>

    <!-- Modal Overlay -->
    <div class="modal-overlay" id="modalOverlay">
        <div class="modal-content">
            <button class="modal-close" id="closeModal">&times;</button>
            
            <div id="form">
                <div class="row">
                    <div class="medium-10 medium-centered column form-holder">
                <h2>Your Enquiry</h2>
                <p class="big">Hello, my name is <span contenteditable="true" class="color1" id="name" data-placeholder="your name"></span>. I live in <span contenteditable="true" class="color2" id="place" data-placeholder="city"></span> with my dog, whose name is <span contenteditable="true" class="color3" id="dogname" data-placeholder="dog's name"></span>.</p>
                <p class="big">I would like to enquire about receiving help with <span contenteditable="true" class="color4" id="help" data-placeholder="describe issue"></span>.</p>
                <p class="big">I can be contacted via email: <span contenteditable="true" class="color1" id="email" data-placeholder="your@email.com"></span>, and phone <span contenteditable="true" class="color2" id="phone" data-placeholder="phone number"></span>.</p>
                
                <h2>Preferred Contact Method</h2>
                <p><small>Please contact me via:</small></p>
                <div class="button-options-multiple" id="select-contact-method">
                    <button type="button">Email</button>
                    <button type="button">Phone</button>
                </div>
                
                <h2>Preferred Service</h2>
                <p><small>I have read your <a href="https://walkwithmeottawa.com/training" target="_blank">services</a>, and I would like to enquire about:</small></p>
                <div class="button-options" id="select-service">
                    <button type="button">Private Lessons</button>
                    <button type="button">Day School</button>
                    <button type="button">Board and Train</button>
                    <button type="button">Group Classes</button>
                    <button type="button">I'm not sure</button>
                </div>
                
                <h2>Preferred Program</h2>
                <p><small>After learning about your <a href="https://gooddogbehaviour.com.au/bookings/" target="_blank">programs</a>, I am interested in:</small></p>
                <div class="button-options" id="select-package">
                    <button type="button">The Super Puppy</button>
                    <button type="button">The Good Dog</button>
                    <button type="button">The J K Growling</button>
                    <button type="button">The Melbourne Dog</button>
                    <button type="button">The Family Dog</button>
                    <button type="button">The Charles Barkowski</button>
                    <button type="button">I'm not sure</button>
                </div>
                
                <h2>Your Availability</h2>
                <p><small>My dog and I are available for training at the following times:</small></p>
                <div class="button-options-multiple" id="select-availability">
                    <button type="button" class="circle">Mon</button>
                    <button type="button" class="circle">Tue</button>
                    <button type="button" class="circle">Wed</button>
                    <button type="button" class="circle">Thu</button>
                    <button type="button" class="circle">Fri</button>
                    <button type="button" class="circle">Sat</button>
                    <button type="button" class="circle">Sun</button>
                </div>
                <div class="button-options-multiple" id="select-availability-time">
                    <button type="button">Mornings</button>
                    <button type="button">Afternoons</button>
                    <button type="button">Evenings</button>
                    <button type="button">Any time</button>
                </div>
            </div>
            <div class="column">
                <div class="success-message" id="success-message">
                    Thank you! Your enquiry has been submitted successfully. We'll be in touch soon!
                </div>
                <div class="error-message" id="error-message">
                    There was an error submitting your form. Please try again or email us directly at info@walkwithmeottawa.com
                </div>
                <small>By clicking submit you agree to the <a href="https://gooddogbehaviour.com.au/terms-privacy/" target="_blank">terms of service</a> of this site.</small><br><br>
                <button type="button" id="submit">SUBMIT</button>
            </div>
        </div>
    </div>
        </div>
    </div>

    <script>
        // Modal functionality
        const modalOverlay = document.getElementById('modalOverlay');
        const openModalBtn = document.getElementById('openModal');
        const closeModalBtn = document.getElementById('closeModal');

        // Function to open modal
        function openModal() {
            console.log('Opening modal...');
            modalOverlay.classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        // Function to close modal
        function closeModal() {
            console.log('Closing modal...');
            modalOverlay.classList.remove('active');
            document.body.style.overflow = 'auto';
        }

        // Listen for messages from parent page to open modal
        window.addEventListener('message', function(event) {
            console.log('Message received:', event.data);
            if (event.data === 'openDogTrainingForm') {
                openModal();
            }
        });

        // Open modal (in case button is used within iframe)
        if (openModalBtn) {
            openModalBtn.addEventListener('click', function() {
                openModal();
            });
        }

        // Close modal when clicking X
        closeModalBtn.addEventListener('click', function() {
            closeModal();
        });

        // Close modal when clicking outside
        modalOverlay.addEventListener('click', function(e) {
            if (e.target === modalOverlay) {
                closeModal();
            }
        });

        // Close modal with Escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape' && modalOverlay.classList.contains('active')) {
                closeModal();
            }
        });

        // Handle single-select buttons (Service and Program)
        document.querySelectorAll('.button-options').forEach(container => {
            container.querySelectorAll('button').forEach(button => {
                button.addEventListener('click', function() {
                    // Remove selected class from all buttons in this container
                    container.querySelectorAll('button').forEach(btn => {
                        btn.classList.remove('selected');
                    });
                    // Add selected class to clicked button
                    this.classList.add('selected');
                });
            });
        });

        // Handle multi-select buttons (Availability)
        document.querySelectorAll('.button-options-multiple').forEach(container => {
            container.querySelectorAll('button').forEach(button => {
                button.addEventListener('click', function() {
                    // Toggle selected class
                    this.classList.toggle('selected');
                });
            });
        });

        // Handle form submission
        document.getElementById('submit').addEventListener('click', function() {
            const submitButton = this;
            const successMessage = document.getElementById('success-message');
            const errorMessage = document.getElementById('error-message');
            
            // Hide any previous messages
            successMessage.style.display = 'none';
            errorMessage.style.display = 'none';

            // Collect form data
            const formData = {
                name: document.getElementById('name').textContent.trim(),
                place: document.getElementById('place').textContent.trim(),
                dogname: document.getElementById('dogname').textContent.trim(),
                help: document.getElementById('help').textContent.trim(),
                email: document.getElementById('email').textContent.trim(),
                phone: document.getElementById('phone').textContent.trim(),
                contactMethod: [],
                service: '',
                program: '',
                availabilityDays: [],
                availabilityTimes: []
            };

            // Get selected service
            const selectedService = document.querySelector('#select-service button.selected');
            if (selectedService) {
                formData.service = selectedService.textContent;
            }

            // Get selected program
            const selectedProgram = document.querySelector('#select-package button.selected');
            if (selectedProgram) {
                formData.program = selectedProgram.textContent;
            }

            // Get selected contact methods
            document.querySelectorAll('#select-contact-method button.selected').forEach(btn => {
                formData.contactMethod.push(btn.textContent);
            });

            // Get selected availability days
            document.querySelectorAll('#select-availability button.selected').forEach(btn => {
                formData.availabilityDays.push(btn.textContent);
            });

            // Get selected availability times
            document.querySelectorAll('#select-availability-time button.selected').forEach(btn => {
                formData.availabilityTimes.push(btn.textContent);
            });

            // Basic validation
            if (!formData.name || !formData.email) {
                errorMessage.textContent = 'Please fill in at least your name and email address.';
                errorMessage.style.display = 'block';
                return;
            }

            // Validate email format
            const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailPattern.test(formData.email)) {
                errorMessage.textContent = 'Please enter a valid email address.';
                errorMessage.style.display = 'block';
                return;
            }

            // Create email body
            const emailBody = `
New Dog Training Enquiry

CONTACT INFORMATION:
Name: ${formData.name}
Location: ${formData.place}
Dog's Name: ${formData.dogname}
Email: ${formData.email}
Phone: ${formData.phone}
Preferred Contact Method: ${formData.contactMethod.join(' and ') || 'Not specified'}

ENQUIRY DETAILS:
Help Needed: ${formData.help}

PREFERENCES:
Preferred Service: ${formData.service || 'Not selected'}
Preferred Program: ${formData.program || 'Not selected'}

AVAILABILITY:
Days: ${formData.availabilityDays.join(', ') || 'Not selected'}
Times: ${formData.availabilityTimes.join(', ') || 'Not selected'}
            `.trim();

            // Disable submit button
            submitButton.disabled = true;
            submitButton.textContent = 'SENDING...';

            // Send using FormSubmit.co (free email service)
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = 'https://formsubmit.co/info@walkwithmeottawa.com';
            form.style.display = 'none';

            // Add form fields
            const fields = {
                '_subject': 'New Dog Training Enquiry from ' + formData.name,
                '_captcha': 'false',
                '_template': 'table',
                '_next': 'https://YOUR-GITHUB-USERNAME.github.io/dog-training-form/thanks.html',
                'message': emailBody
            };

            for (const [key, value] of Object.entries(fields)) {
                const input = document.createElement('input');
                input.type = 'hidden';
                input.name = key;
                input.value = value;
                form.appendChild(input);
            }

            document.body.appendChild(form);
            
            // Submit form
            form.submit();

            // Show success message (form will redirect, but this shows briefly)
            successMessage.style.display = 'block';
            
            // Note: FormSubmit will redirect to a thank you page. 
            // If you want to stay on the same page, you'll need to use a different service
            // or set up your own backend.
        });

        // Add placeholder behavior for contenteditable spans
        document.querySelectorAll('span[contenteditable]').forEach(span => {
            span.addEventListener('focus', function() {
                if (this.textContent === this.getAttribute('data-placeholder')) {
                    this.textContent = '';
                }
            });
        });
    </script>
</body>
</html>
